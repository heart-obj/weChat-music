@keyframes rotateImg {
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}
@-webkit-keyframes rotateImg {
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}
.control-play-box {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: red;
  text-align: center;
}
.control-play-box .banner-box {
  width: 100%;
  height: 830rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.banner-box .banner-img {
  width: 360rpx;
  height: 360rpx;
  /* border-radius: 50%; */
  background: #000000;
  display: inline-block;
  margin: auto;
  animation: rotateImg 3s linear infinite;
  -webkit-animation:rotateImg 3s linear infinite;
}
.banner-img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
