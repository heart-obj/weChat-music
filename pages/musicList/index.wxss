.music-container {
  padding-bottom: 120rpx;
  font-size: 25.354rpx;
}
.music-container .music-box {
  height: 108.66rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  box-sizing: border-box;
  padding: 0 18.11rpx;
  margin-top: 18.11rpx;
}
.music-box .music-img {
  width: 108.66rpx;
  height: 108.66rpx;
}
.music-box .music-text-box {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-left: 18.11rpx;
  justify-content: space-around;
}
.play-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 108.66rpx;
  background: rgb(201, 66, 255);
  display: flex;
  justify-content: space-between;
  box-shadow: 0 0 10px rgba(0, 0, 0, .5);
  box-sizing: border-box;
  padding: 18.11rpx;
  color: #ffffff;
}
.play-box .play-img {
  width: 72.44rpx;
  height: 72.44rpx;
  border-radius: 50%;
}
.play-box .play-item {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 543.3rpx;
  box-sizing: border-box;
  padding-left: 18.11rpx;
}
.play-item .author-text {
  font-size: 21.732rpx;
  color: #e7e7e7;
}
.play-box .play-btn-box {
  width: 72.44rpx;
  height: 100%;
  position: relative;
}
.play-btn-box .play-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.play-btn image {
  width: 100%;
  height: 100%;
}